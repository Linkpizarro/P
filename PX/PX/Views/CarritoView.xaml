<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Name="vistacarrito"
             xmlns:local="clr-namespace:PX"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=ProductosViewModel}"
             x:Class="PX.Views.CarritoView">
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0">
            <Label Text="Carrito de la Compra"
                FontSize="40" TextColor="Red" 
                HorizontalOptions="CenterAndExpand" />
            <ListView ItemsSource="{Binding Articulos}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Nombre}"
                                       HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding PrecioUnidad}"
                                       HorizontalOptions="End" />
                                
                                <Entry Text="{}" />
                                <!--<Stepper Maximum="20" Minimum="1" Increment="1" x:Name="Cantidad" Value="{Binding CantidadProducto}" HorizontalOptions="StartAndExpand"/>
                                <Label HorizontalOptions="End" BindingContext="{x:Reference Cantidad}" Text="{Binding Value}"/>-->
                                <Stepper Maximum="20" Minimum="1" Increment="1" x:Name="Cant" Value="{Binding Cantidad}" HorizontalOptions="StartAndExpand"/>
                                <Label HorizontalOptions="End" BindingContext="{x:Reference Cant}" Text="{Binding Value}"/>
                                <!--<Button Text="Detalles"
                                        CommandParameter="{Binding .}" 
                                        Command="{Binding BindingContext.MostrarDetalles, Source={x:Reference vistaproductos}}" />-->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>