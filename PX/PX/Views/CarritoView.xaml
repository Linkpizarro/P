<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Name="vistacarrito"
             xmlns:local="clr-namespace:PX"
             BindingContext="{Binding Source={x:Static local:App.Locator}, Path=CarritoViewModel}"
             x:Class="PX.Views.CarritoView">
    <ContentPage.Content>
        <StackLayout Margin="0,30,0,0">
            <Label Text="Carrito de la Compra"
                FontSize="40" TextColor="Red" 
                HorizontalOptions="CenterAndExpand" />
            <ListView ItemsSource="{Binding Articulos}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Producto.Nombre}"
                                       HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding Producto.PrecioUnidad}"
                                       HorizontalOptions="End" />
                                <!--<Button Text="Detalles"
                                        CommandParameter="{Binding .}" 
                                        Command="{Binding BindingContext.MostrarDetalles, Source={x:Reference vistaproductos}}" />-->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>